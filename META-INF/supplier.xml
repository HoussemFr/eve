<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    <import resource="common.xml"/>
    
    <bean id="supp_msg" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basenames">
            <list>
                <value>META-INF/supplier</value>
            </list>
        </property>
    </bean>
    
    <bean id="supp_model" class="org.eve.sd.supplier.SupplierModel">
        <property name="sessionFactory" ref="session_factory"/>
    </bean>
    
    <bean id="supp_msg_bar" class="org.eve.view.MessageBar" scope="prototype">
        <property name="messages" ref="supp_msg"/>
    </bean>
    
    <bean id="supp_view" class="org.eve.sd.supplier.SupplierView">
        <property name="messages" ref="supp_msg"/>
    </bean>
    
    <bean id="supp_control" class="org.eve.sd.supplier.SupplierController">
        <property name="messageBar" ref="supp_msg_bar"/>
        <property name="object">
            <bean class="org.eve.sd.supplier.Supplier"/>
        </property>
        <property name="model" ref="supp_model"/>
        <property name="views">
            <map>
                <entry key="supp_view" value-ref="supp_view"/>
            </map>
        </property>
    </bean>
</beans>