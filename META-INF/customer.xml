<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    <import resource="common.xml"/>
    
    <bean id="cust_msg" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basenames">
            <list>
                <value>META-INF/customer</value>
            </list>
        </property>
    </bean>
    
    <bean id="customer" class="org.eve.sd.customer.Customer"/>
    
    <bean id="cust_model" class="org.eve.sd.customer.CustomerModel">
        <property name="sessionFactory" ref="session_factory"/>
        <property name="queries">
            <map>
                <entry key="sel_customer" value="from Customer where ident = ?"/>
                <entry key="selby_customers" value="from Customer where name like ? and alternateName like ?"/>
            </map>
        </property>
    </bean>
    
    <bean id="cust_form" class="org.eve.view.Form"/>
    
    <bean id="cust_sel_form" class="org.eve.view.Form"/>
    
    <bean id="cust_selpor_form" class="org.eve.view.Form"/>
    
    <bean id="cust_contacts_table" class="org.eve.view.TableAssist"/>
    
    <bean id="cust_addresses_table" class="org.eve.view.TableAssist"/>
    
    <bean id="cust_view" class="org.eve.sd.customer.CustomerView"/>
    
    <bean id="cust_control" class="org.eve.sd.customer.CustomerController">
        <property name="messages" ref="cust_msg"/>
        <property name="object" ref="customer"/>
        <property name="model" ref="cust_model"/>
        <property name="forms">
            <map>
                <entry key="main" value-ref="cust_form"/>
            </map>
        </property>
        <property name="tables">
            <map>
                <entry key="contacts" value-ref="cust_contacts_table"/>
                <entry key="addresses" value-ref="cust_addresses_table"/>
            </map>
        </property>
        <property name="views">
            <map>
                <entry key="cust_view" value-ref="cust_view"/>
            </map>
        </property>
    </bean>
    
    <!-- Seleção de clientes -->
    <bean id="cust_selpor_table" class="org.eve.view.TableAssist"/>
    
    <bean id="cust_sel_view" class="org.eve.sd.customer.CustomerSelectionView"/>
    
    <!-- Escolha de múltiplos clientes -->
    <bean id="cust_choose_view" class="org.eve.sd.customer.CustomerChooseView"/>
    
    <bean id="cust_sel_control" class="org.eve.sd.customer.CustomerSelectionController">
        <property name="messages" ref="cust_msg"/>
        <property name="object" ref="customer"/>
        <property name="model" ref="cust_model"/>
        <property name="forms">
            <map>
                <entry key="main" value-ref="cust_sel_form"/>
                <entry key="selpor" value-ref="cust_selpor_form"/>
            </map>
        </property>
        <property name="tables">
            <map>
                <entry key="customers" value-ref="cust_selpor_table"/>
            </map>
        </property>
        <property name="views">
            <map>
                <entry key="cust_sel_view" value-ref="cust_sel_view"/>
                <entry key="cust_choose_view" value-ref="cust_choose_view"/>
            </map>
        </property>
    </bean>
</beans>